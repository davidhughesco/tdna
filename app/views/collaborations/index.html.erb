<table class="table table-hover table-responsive">
	<thead>
		<tr>
			<th>Candidate</th>
			<th>Manager</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<% @collaborations.each do |c| %>
		<tr>
			<td><%= c.collaborator_id %> - <%= c.collaborator.name %></td>
			<td><%= c.candidate_id %> - <%= c.candidate.name %></td>
			<td>
				<%= link_to "Delete", c, :method => :delete, class: 'btn btn-xs btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>