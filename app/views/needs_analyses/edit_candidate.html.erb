<div class="row">

	<div class="col-lg-10 col-lg-offset-1 col-md-12">

		<h3>TDNA Matrix<br>
		<small>for <%= current_candidate.name %></small></h3>
		<br>

		<%= form_tag update_candidate_needs_analyses_path, :method => :put do %>

			<table class="table table-hover table-responsive">
				<thead>
					<th style="width:34%">Activity</th>
				    <th style="width:22%;text-align:center">Relevance to Current&nbsp;Role</th>
				    <th style="width:22%;text-align:center">Interest</th>
				    <th style="width:22%;text-align:center">Skill/Confidence</th>
				</thead>
				<tbody>
					<%= render 'needs_analyses/button_columns' %>
				</tbody>
			</table>

			<%= submit_tag "Save and Exit", class: "btn btn-success" %>

		<% end %>

	</div>

</div>