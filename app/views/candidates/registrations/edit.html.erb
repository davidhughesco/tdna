<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h2>Edit Profile</h2>
    <br>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: { multipart: true, method: :put, class: 'form-vertical'},
                    wrapper: :vertical_form,
                    wrapper_mappings: {
                    check_boxes: :vertical_radio_and_checkboxes,
                    file: :horizontal_file_input }) do |f| %>
      
      <%= devise_error_messages! %>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :first_name, autofocus: true, label: "First Name" %>
        </div>
        <div class="col-md-6">
          <%= f.input :last_name, label: "Last Name" %>
        </div>
      </div>

      <%= f.input :organisation_name, label: "Organisation" %>
      <%= f.input :email %>

      <hr>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :password, hint: "Leave blank if you don't want to change it.", label: "New Password" %>
        </div>
        <div class="col-md-6">
          <%= f.input :password_confirmation, label: "Confirm New Password", autocomplete: "off", hint: "Must be the same as New Password." %>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :current_password, hint: "We need your current password to confirm your changes.", label: "Current Password" %>
        </div>
      </div>

      <%= f.submit "Save", class: "btn btn-success" %>

    <% end %>

  </div>
</div>