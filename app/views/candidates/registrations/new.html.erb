<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h2>Sign up</h2>
    <br>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="row">
          <div class="col-md-6">
            <%= f.input :first_name, autofocus: true, label: "First Name" %>
          </div>
          <div class="col-md-6">
            <%= f.input :last_name, label: "Last Name" %>
          </div>
        </div>

        <%= f.input :organisation_name, label: "Organisation" %>
        
        <div class="row">
          <div class="col-md-3">
            <%= f.input :collaborator_id, label: "Manager Code" %>
          </div>
        </div>

        <%= f.input :email %>

        <div class="row">
          <div class="col-md-6">
            <%= f.input :password, autocomplete: "off" %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation, autocomplete: "off", label: "Confirm Password"%>
          </div>
        </div>

        <%= f.submit "Sign up", class: "btn btn-success" %>

    <% end %>

  </div>
</div>