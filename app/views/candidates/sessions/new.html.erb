<div class="row sign-form">
  <div class="col-md-4 col-md-offset-4">

    <h2>Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <%= f.input :email, autofocus: true  %>
    <%= f.input :password %>

    <!-- <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me %>
    <% end -%> -->

    <%= f.submit "Sign in", class: "btn btn-primary sign-up" %><br>
    <%= link_to "Don't yet have an account? Click here to sign up.", new_candidate_registration_path %>

    <% end %>

    <!-- <%= render "candidates/shared/links" %> -->

  </div>
</div>